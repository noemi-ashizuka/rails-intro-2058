<h1>Contact Us</h1>

<%# members = ["sylvain", "doug", "sasha", "noemi", "celso", "gary"]  # this doesn't belong to the view%>

<%#= members %>

  <form action="/contact" method="get">
    <div class="d-flex">
      <input type="text" 
      name="member" 
      placeholder="Who are you looking for?" 
      class="form-control w-50"
      value=<%= params[:member] %>
      >
      <input type="submit" class="btn btn-primary">
    </div>
  </form>
<ul>
  <% @members.each do |member| %>
    <li><%= member %></li>
  <% end %>
</ul>
